function renderTools() {
  const container = document.getElementById('tools-container');
  tools.forEach((tool, index) => {
    const id = 'tool-' + index;
    const html = `
      <div class="tool">
        <h2>${tool.title}</h2>
        <p class="description">${tool.desc}</p>
        <p class="price">${tool.price}</p>
